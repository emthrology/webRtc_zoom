doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(http-equiv="X-UA-Compatible", content="IE=edge")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    title Noom
    link(rel="stylesheet", href="https://unpkg.com/mvp.css")
  body 
    header
      h1 Welcom to Noom

    main
      div#welcome
        form
          input#room-info(type="text", placeholder="room name", required)
          input#nick(type="text", placeholder="edit nickname")
          button Enter Room
        h4 Open Rooms:
        ul
      div#room
        h3
        ul
        form#name
          input(type="text", placeholder="edit nickname", required)
          button Edit
        form#message
          input(type="text", placeholder="chat", required)
          button Send
    script(src="/socket.io/socket.io.js")
    script(src="/public/js/app.js") 